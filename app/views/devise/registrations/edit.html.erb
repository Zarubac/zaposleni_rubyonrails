<h2>Izmena profila <% resource_name.to_s.humanize %></h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>
  <br>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(Ostavite prazno polje ako ne zelite da promenite password)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    <% if @minimum_password_length %>
    
      <em><%= @minimum_password_length %> karaktera minimum</em>
    <% end %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password_ponovo %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :potvrda_promene%> <i>(potvrdite promene unosom trenutnog passworda)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Update", class:"btn btn-secondary" %>
  </div>
<% end %>
<br><br>
<h3>Brisanje profila</h3>

<p>Nezadovoljni ste? <%= button_to "ObriÅ¡i moj profil", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>

<%= link_to "Nazad", :back %>
